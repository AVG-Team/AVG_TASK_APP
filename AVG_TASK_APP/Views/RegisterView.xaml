<Window x:Class="AVG_TASK_APP.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:AVG_TASK_APP.ViewModels"
        xmlns:local="clr-namespace:AVG_TASK_APP.Views"
        xmlns:customcontrols="clr-namespace:AVG_TASK_APP.CustomControls"
        mc:Ignorable="d"
        Title="RegisterView" Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">
    <Window.DataContext>
        <viewmodels:RegisterViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>
    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode="TwoWay" Converter="{StaticResource BooleanToVisibility}"/>
    </Window.Visibility>
    
    <Border CornerRadius="30">
        <Border CornerRadius="30"
            BorderThickness="2"
            BorderBrush="{StaticResource borderColor}"
            Background="{StaticResource backColor}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Register"
                           Foreground="{StaticResource textColor1}"
                           FontSize="12"
                           FontFamily="Montserrat"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                    <Button x:Name="btnMinimize"
                        BorderThickness="0"
                        Content="-"
                        Foreground="{StaticResource textButtonColor}"
                        FontSize="16"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnMinimize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource color2}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource hoverColor2}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                    CornerRadius="10"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnClose"
                        BorderThickness="0"
                        Content="X"
                        Foreground="{StaticResource textButtonColor}"
                        FontSize="12"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource color1}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource hoverColor1}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                    CornerRadius="10"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel
                            HorizontalAlignment="Center"
                            Grid.Row="1"
                            Margin="0,25,0,0">

                    <TextBlock Text="AVG TASK APPLICATION"
                               Foreground="{StaticResource titleColor}"
                               FontSize="18"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>

                    <TextBlock Text="Application Made By AVG Team"
                               Foreground="{StaticResource subTitleColor}"
                               FontSize="11"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"
                               />
                    <TextBlock Text="Full Name"
                               Foreground="{StaticResource textColor1}"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,30,0,0"/>

                    <TextBox   x:Name="txtFullName"
                               Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" 
                               FontFamily="Montserrat"
                               FontWeight="Medium"
                               Foreground="{StaticResource textColor1}"
                               CaretBrush="{StaticResource color5}"
                               BorderBrush="{StaticResource color3}"
                               BorderThickness="0,0,0,1"
                               Height="20"
                               VerticalAlignment="Center"
                               Margin="0,2,0,0"
                               Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Resources/Icons/user-icon.png"
                                        Stretch="None"
                                        AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>

                    <TextBlock Text="Username / Email"
                               Foreground="{StaticResource textColor1}"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,20,0,0"/>

                    <TextBox   x:Name="txtUsername"
                               Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                               FontFamily="Montserrat"
                               FontWeight="Medium"
                               Foreground="{StaticResource textColor1}"
                               CaretBrush="{StaticResource color5}"
                               BorderBrush="{StaticResource color3}"
                               BorderThickness="0,0,0,1"
                               Height="20"
                               VerticalAlignment="Center"
                               Margin="0,2,0,0"
                               Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Resources/Icons/user-icon.png"
                                Stretch="None"
                                AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>

                    <TextBlock Text="Phone"
                               Foreground="{StaticResource textColor1}"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,20,0,0"/>

                    <TextBox   x:Name="txtPhone"
                               Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" 
                               FontFamily="Montserrat"
                               FontWeight="Medium"
                               Foreground="{StaticResource textColor1}"
                               CaretBrush="{StaticResource color5}"
                               BorderBrush="{StaticResource color3}"
                               BorderThickness="0,0,0,1"
                               Height="20"
                               VerticalAlignment="Center"
                               Margin="0,2,0,0"
                               Padding="20,0,0,0">

                        <TextBox.Background>
                            <ImageBrush ImageSource="/Resources/Icons/phone-icon.png"
                                Stretch="None"
                                AlignmentX="Left"
                                        Opacity="0.6"/>
                        </TextBox.Background>
                    </TextBox>

                    <TextBlock Text="Password"
                               Foreground="{StaticResource textColor1}"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,20,0,0"/>

                    <customcontrols:BindablePasswordBox
                        Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Height="22"
                        Margin="0,5,0,0">
                    </customcontrols:BindablePasswordBox>

                    <TextBlock Text="Repeat Password"
                                Foreground="{StaticResource textColor1}"
                                FontSize="12"
                                FontWeight="Medium"
                                FontFamily="Montserrat"
                                Margin="0,20,0,0"/>

                    <customcontrols:BindablePasswordBox
                        Password="{Binding RepeatPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Height="22"
                        Margin="0,5,0,0">
                    </customcontrols:BindablePasswordBox>



                    <TextBlock Text="{Binding ErrorMessage}"
                               FontSize="12"
                               Foreground="#D7596D"
                               FontFamily="Montserrat"
                               FontWeight="Medium"
                               Margin="0,10,0,0" 
                               TextWrapping="Wrap"/>
                    
                    <Border CornerRadius="20">
                        <CheckBox Margin="0,20,0,0"
                              Height="20"
                              HorizontalAlignment="Left"
                              IsChecked="{Binding IsCheckedPrivacy, UpdateSourceTrigger=PropertyChanged}"
                              FontSize="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="By signing I agree with " Foreground="{StaticResource textColor1}"/>
                                <TextBlock Text="terms and conditions" Foreground="{StaticResource buttonColor}"/>
                            </StackPanel>
                        </CheckBox>
                    </Border>
                    <Button x:Name="btnSignUp"
                            Command="{Binding RegisterCommand}"
                            BorderThickness="0"
                            Content="Register"
                            FontSize="12"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Foreground="{StaticResource textButtonColor}"
                            Cursor="Hand"
                            Grid.Column="2"
                            Margin="0,10,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource buttonColor}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource hoverButtonColor}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                                    CornerRadius="20"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button> 
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
