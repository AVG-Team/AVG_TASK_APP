<UserControl x:Class="AVG_TASK_APP.Usercontrols.Recently_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:AVG_TASK_APP.Usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="836" Loaded="Recently_Loaded">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal"
          Margin="40,0,0,10">
            <fa:IconImage Icon="Clock"
                Foreground="{StaticResource color9}"/>
            <TextBlock Text="RECENTLY" 
             Foreground="{StaticResource textColor5}" 
             FontSize="18"
             FontWeight="Bold"
             VerticalAlignment="Center"
             FontFamily="Montserrat"
             Width="150" 
             Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
          Margin="40,10,0,0" x:Name="recentLyPanel">
            <!-- btn 1-->
            <!-- Button board in here -->
        </StackPanel>
    </StackPanel>
</UserControl>
