<UserControl x:Class="AVG_TASK_APP.Usercontrols.BindablePasswordBox_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AVG_TASK_APP.Usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <PasswordBox x:Name="txtPassword"
                 FontSize="13"
                 FontWeight="Medium"
                 FontFamily="Montserrat"
                 Foreground="DarkGray"
                 CaretBrush="LightGray"
                 BorderBrush="DarkGray"
                 BorderThickness="0,0,0,1"
                 VerticalContentAlignment="Center"
                 Padding="20,0,0,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/AVG_TASK_APP;component/Resources/Icons/key-icon.png"
                    Stretch="None"
                    AlignmentX="Left"/>
        </PasswordBox.Background>

    </PasswordBox>
</UserControl>
