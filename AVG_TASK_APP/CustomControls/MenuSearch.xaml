<UserControl x:Class="AVG_TASK_APP.CustomControls.MenuSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:AVG_TASK_APP.CustomControls"
             mc:Ignorable="d"
        BorderThickness="0"
             d:DesignHeight="200" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
        <Border CornerRadius="10" 
                 Width="300" Height="200"
                 BorderThickness="1"
                 BorderBrush="{StaticResource color6}" 
                 Background="{StaticResource color6}">
            <StackPanel Orientation="Vertical">
                <ListBox x:Name="_list" Height="200"
                         Margin="0,5,0,0"
                         Background="Transparent" BorderThickness="0">

                </ListBox>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
